<!DOCTYPE html>
<html>
  <body>
    <h2>Recipes</h2>

    <% recipes.each do |recipe| %>
      <section>
        <div class=recipe>
          <p><%= recipe.title %></p>
          <img src="<%= recipe.image %>" alt="<%= recipe.title %>"/>
          <p>
            <button><a href="/recipes/<%= recipe.id %>">View More</a></button>
          </p>
        </div>
      </section>
      <br></br>
    <% end %>
    <% if previous_page_link %>
      <button class="previous_page_button"><a href=<%= previous_page_link %>>Previous Page</a></button>
    <% end %>
    <% if next_page_link %>
      <button class="next_page_button"><a href=<%= next_page_link %>>Next Page</a></button>
    <% end %>
  </body>
</html>
